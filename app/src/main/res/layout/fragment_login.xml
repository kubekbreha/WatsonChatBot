<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".authentication.fragments.LoginFragment">


    <FrameLayout
        android:id="@+id/frag_login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/transparent" />


    <ImageButton
        android:id="@+id/frag_login_btn_back_from_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_login_top_layout"
        android:layout_margin="16dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_arrow_back" />


    <TextView
        android:id="@+id/frag_login_text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Log in"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/frag_login_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_text_register"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:hint="@string/email"
        android:shadowColor="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite" />


    <EditText
        android:id="@+id/frag_login_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_edit_email"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:hint="@string/password"
        android:shadowColor="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite" />

    <Button
        android:id="@+id/frag_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_edit_password"
        android:layout_below="@id/frag_register_edit_password"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounded_white"
        android:text="Sign in"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />


    <Button
        android:id="@+id/frag_login_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_login_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Forgot password ?"
        android:textAllCaps="false"
        android:textColor="@color/light_gray"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/frag_login_goto_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_marginBottom="16dp"
        android:focusable="true">

        <Button
            android:id="@+id/frag_login_goto_signin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:text="Don't have an account ?"
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:textSize="14sp" />



        <Button
            android:id="@+id/frag_login_goto_signin_button"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/frag_login_goto_signin_text"
            android:background="@color/transparent"
            android:text="Sign up."
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>