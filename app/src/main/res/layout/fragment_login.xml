<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registerBackground"
    tools:context=".authentification.fragments.LoginFragment">

    <FrameLayout
        android:id="@+id/frag_login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/dark_transparent" />



    <ImageButton
        android:id="@+id/frag_login_btn_back_from_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/frag_login_top_layout"
        android:background="@color/registerBackground"
        android:src="@drawable/ic_arrow_back" />


    <TextView
        android:id="@+id/frag_login_text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Log in"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/frag_login_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_text_register"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="@string/email"
        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary" />


    <EditText
        android:id="@+id/frag_login_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_edit_email"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:hint="@string/password"
        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/frag_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/frag_login_edit_password"
        android:layout_below="@id/frag_register_edit_password"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounded_red"
        android:text="Sign in"
        android:textColor="@android:color/white"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/frag_login_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_login_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Forgot password ?"
        android:textSize="16sp"
        android:textStyle="bold" />




</RelativeLayout>